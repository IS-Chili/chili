
@{
    ViewData["Title"] = "Data Graph";
}

<h1 class="text-center">24 Hour Meteorological Data Graph for Agricola Station</h1>
<h6 class="text-center">Latitude: 30.8170°N, Longitude: 88.5205°W, Elevation: 68.58m, Commissioned: 2008-08-12</h6>
<h5 class="text-center">Measurements recorded at: 2019-09-08 18:58:00 CST</h5>

<hr>

<div class="d-flex justify-content-center my-4">
    <a class="btn btn-light mr-3" asp-controller="Data" asp-action="Station" asp-route-id="1">Display Current Data for Agricola Station</a>
    <a class="btn btn-light" asp-controller="Data" asp-action="Metadata" asp-route-id="1">Display Metadata for Agricola Station</a>
</div>

<div class="form-row d-flex justify-content-center">
    <div class="form-group col-lg-2 mr-2">
        <label for="datePicker">Date</label>
        <div class="input-group date" id="datePicker" data-target-input="nearest">
            <input type="text" :value="currentDate" class="form-control datetimepicker-input" data-target="#datePicker"/>
            <div class="input-group-append" data-target="#datePicker" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
            </div>
        </div>
    </div>
    <div class="form-group col-lg-3 mr-2">
        <label for="stationSelection">Station</label>
        <select2 id="stationSelection" :options="stations" v-model="model.stationId"></select2>
    </div>
    <div class="form-group col-lg-4 mr-2">
        <label for="variableSelection">Variable</label>
        <select id="variableSelection">
            <option value="1">Air Temp</option>
            <option value="2">Percp</option>
        </select>
    </div>
    <div class="col-lg-1">
        <button type="button" class="btn btn-secondary btn-inline mb-3">Go</button>
    </div>
</div>

<div class="form-row d-flex justify-content-center">
    <div class="form-group col-lg-8">
        <div class="btn-group" role="group" aria-label="Date change">
            <button type="button" class="btn btn-light"><i class="fas fa-chevron-left"></i></button>
            <button type="button" class="btn btn-light"><i class="fas fa-clock"></i></button>
            <button type="button" class="btn btn-light"><i class="fas fa-chevron-right"></i></button>
        </div>
    </div>

    <div class="form-group col-lg-2">
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="metricUnits">
            <label class="custom-control-label" for="metricUnits">Use Metric Units</label>
        </div>
    </div>
</div>

@section scripts {
<environment include="Development">
    <script src="~/js/data/graph.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/data/graph.min.js" asp-append-version="true"></script>
</environment>
}