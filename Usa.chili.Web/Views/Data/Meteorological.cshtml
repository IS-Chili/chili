@{
    ViewBag.Title = "Meteorological Data";
    ViewBag.Description = "Meteorological Data";
}

<div class="alert alert-info" role="alert">
    <div class="text-center">Please consider supporting the USA Mesonet project by clicking on the <a asp-controller="Home" asp-action="Donate">Donations Welcome</a> link</div>
</div>

<h2 class="text-center">Select Meteorological Data to Download</h2>

<div class="form-row d-flex justify-content-center">
    <div class="form-group col-lg-2 mr-2">
        <label for="beginDate">Begin Date</label>
        <div class="input-group date" id="beginDate" data-target-input="nearest">
            <input type="text" class="form-control datetimepicker-input" data-target="#beginDate" />
            <div class="input-group-append" data-target="#beginDate" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>
    <div class="form-group col-lg-2 mr-2">
        <label for="endDate">End Date</label>
        <div class="input-group date" id="endDate" data-target-input="nearest">
            <input type="text" class="form-control datetimepicker-input" data-target="#endDate" />
            <div class="input-group-append" data-target="#endDate" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>
    <div class="form-group col-lg-3 mr-2">
        <label for="stationSelection">Station</label>
        <select2 id="stationSelection" :options="stations" v-model="model.stationId"></select2>
    </div>
    <div class="form-group col-lg-2 mr-2">
        <label for="downloadFormat">Format</label>
        <select id="downloadFormat">
            <option value="csv">CSV</option>
            <option value="fixed">Fixed</option>
        </select>
    </div>
    <div class="col-lg-1">
        <button type="button" class="btn btn-secondary btn-inline">Download</button>
    </div>
</div>

@section scripts {
    <environment include="Development">
        <script src="~/js/data/meteorological.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/data/meteorological.min.js" asp-append-version="true"></script>
    </environment>
}