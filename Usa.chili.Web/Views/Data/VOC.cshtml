@{
    ViewBag.Title = "VOC Data";
    ViewBag.Description = "Volatile Organic Compound Data";
}

<div class="container">
    <h2 class="text-center">Select Volatile Organic Compound Data to Download</h2>

    <hr>

    <div class="form-row d-flex justify-content-center">
        <div class="form-group col-lg-4 mr-2">
            <label for="dayMonthSelection">Year and month</label>
            <select id="dayMonthSelection">
                <option value="2010-09">2010-09</option>
                <option value="2010-10">2010-10</option>
            </select>
        </div>
        <div class="form-group col-lg-4 mr-2">
            <label for="station">Station</label>
            <select2 id="stationSelection" :options="stations" v-model="model.stationId"></select2>
        </div>
        <div class="col-lg-1">
            <button type="button" class="btn btn-secondary btn-inline">Download</button>
        </div>
    </div>
</div>

@section scripts {
    <environment include="Development">
        <script src="~/js/data/voc.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/data/voc.min.js" asp-append-version="true"></script>
    </environment>
}