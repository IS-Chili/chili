@{
ViewBag.Title = "Meteorological Station Data";
ViewBag.Description = "Meteorological Station Data";
}

<div class="container bg-core-blue">
    <br>
    <h1 class="text-center">Meteorological Data for {{ stationInfo.displayName }} Station</h1>
    <h6 class="text-center">Latitude: {{ stationInfo.latitude }}&deg;{{ stationInfo.latitudeDirection }}
        , Longitude: {{ stationInfo.longitude }}&deg;{{ stationInfo.longitudeDirection }}
        , Elevation: {{ stationInfo.elevation }}m
        , Commissioned: {{ stationInfo.beginDate }}
        <span v-if="stationInfo.endDate">, Decommissioned: {{ stationInfo.endDate }}</span>
    </h6>
    <h5 class="text-center">Measurements recorded at: {{ model.datetime }} CST</h5>
    <br>
</div>

<div class="container bg-core-translucent">

    <br>
    <div class="d-flex justify-content-center my-4">
        <a class="btn btn-light" :href="'/Data/Metadata?id=' + stationInfo.id">Display Metadata for {{ stationInfo.displayName }} Station</a>
    </div>

    <div class="form-row d-flex justify-content-center">
        <div class="form-group col-lg-2 mr-2">
            <label for="datePicker">Date</label>
            <div class="input-group date" id="datePicker" data-target-input="nearest">
                <input type="text" :value="currentDate" class="form-control datetimepicker-input"
                    data-target="#datePicker" />
                <div class="input-group-append" data-target="#datePicker" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                </div>
            </div>
        </div>
        <div class="form-group col-lg-2 mr-2">
            <label for="timePicker">Time</label>
            <div class="input-group date" id="timePicker" data-target-input="nearest">
                <input type="text" :value="currentTime" class="form-control datetimepicker-input"
                    data-target="#timePicker" />
                <div class="input-group-append" data-target="#timePicker" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fas fa-clock"></i></div>
                </div>
            </div>
        </div>
        <div class="form-group col-lg-1 ml-3 mr-5">
            <div class="btn-group btn-inline" role="group" aria-label="Date change">
                <button type="button" class="btn btn-light"><i class="fas fa-chevron-left"></i></button>
                <button type="button" class="btn btn-light"><i class="fas fa-clock"></i></button>
                <button type="button" class="btn btn-light"><i class="fas fa-chevron-right"></i></button>
            </div>
        </div>
        <div class="form-group col-lg-3 mr-2">
            <label for="stationSelection">Station</label>
            <select2 id="stationSelection" :options="stations" v-model="model.stationId"></select2>
        </div>
        <div class="col-lg-1">
            <button type="button" class="btn btn-secondary btn-inline mb-3" @@click="go">Go</button>
        </div>
    </div>

    <div class="table-responsive" >
        <table class="table table-hover table-bordered table-striped bg-white">
            <tbody>
                <tr>
                    <td>
                        <a href="/Data/Graph?id=1&varId=1&date=2019-09-19" data-toggle="tooltip"
                            data-placement="bottom" title="View Graph">
                            <i class="fas fa-chart-area fa-lg"></i>
                        </a>
                    </td>
                    <td>Precipitation over the last minute (TB3):</td>
                    <td>0</td>
                    <td>mm</td>
                    <td>0</td>
                    <td>in</td>
                </tr>
                <tr>
                    <td>
                        <a href="/Data/Graph?id=1&varId=2&date=2019-09-19" data-toggle="tooltip"
                            data-placement="bottom" title="View Graph">
                            <i class="fas fa-chart-area fa-lg"></i>
                        </a>
                    </td>
                    <td>Precipitation over the last minute (TX):</td>
                    <td>0</td>
                    <td>mm</td>
                    <td>0</td>
                    <td>in</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts {
<environment include="Development">
    <script src="~/js/data/station.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/data/station.min.js" asp-append-version="true"></script>
</environment>
}