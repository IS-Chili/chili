@{
    ViewBag.Title = "Monthly Summaries";
    ViewBag.Description = "USA Mesonet Monthly Summary Displays";
}

<h2 class="text-center">USA Mesonet Monthly Summary Displays</h2>
<h2 class="text-center text-secondary">September, 2017</h2>
<h3 class="text-center">
    <a href="#" class="mr-3"><i class="fas fa-arrow-left"></i> Previous Month</a>
    <a href="#" class="mr-3">Most Recent</a>
    <a href="#">Next Month <i class="fas fa-arrow-right"></i></a>
</h3>

<div class="form-row">
    <div class="form-group col-lg-2">
        <label for="dayMonthSelection">Year and month</label>
        <select id="dayMonthSelection">
            <option value="2010-09">2010-09</option>
            <option value="2010-10">2010-10</option>
        </select>
    </div>
    <div class="col-lg-1">
        <button type="button" class="btn btn-secondary btn-inline">Go</button>
    </div>
</div>

@section scripts {
    <environment include="Development">
        <script src="~/js/data/summaries.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/data/summaries.min.js" asp-append-version="true"></script>
    </environment>
}